<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <name>StackOverFlow Flair</name>
  <namespace>StackOverFlow.Gadget</namespace>
  <version>1.1.0.0</version>
  <author name="Magnus Johansson">
    <info url="InsomniacGeek.com" />
    <logo src="StackOverFlowLogo.png" />
  </author>
  <copyright>2009 Magnus Johansson</copyright>
  <description>Sidebar gadget to show your StackOverflow Flair.</description>
  <icons>
    <icon height="48" width="48" src="StackOverflowIcon.png" />
  </icons>
  <hosts>
    <host name="sidebar">
      <base type="HTML" apiVersion="1.0.0" src="StackOverflowFlair.html" />
      <permissions>Full</permissions>
      <platform minPlatformVersion="1.0" />
      <defaultImage src="drag.png" />
    </host>
  </hosts>
</gadget>